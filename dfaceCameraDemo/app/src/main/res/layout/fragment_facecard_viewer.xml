<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:keepScreenOn="true">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/facecard_face_topLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <SurfaceView
            android:id="@+id/facecard_surfaceview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:visibility="visible" />

        <SurfaceView
            android:id="@+id/facecard_ir_surfaceview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/single_face_surfaceview"
            android:layout_alignTop="@+id/single_face_surfaceview"
            android:visibility="visible"/>


        <com.pinhole.demo.activity.ui.FaceOverlayView
            android:id="@+id/card_overlay_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/q10"
        android:layout_alignBottom="@+id/facecard_face_topLayout">
        <ImageView
            android:id="@+id/addCard"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="185dp"
            android:scaleType="centerInside"
            android:src="@drawable/picture_add" />

        <TextView
            android:id="@+id/tv_compareResult"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text=""
            android:textColor="@color/sfw_red"
            android:textSize="14sp"
            android:visibility="invisible" />
    </LinearLayout>


</RelativeLayout>
